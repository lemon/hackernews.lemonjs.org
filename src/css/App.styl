
*
  box-sizing border-box

body
  font-family -apple-system,BlinkMacSystemFont,Segoe UI,Roboto,Oxygen,Ubuntu,Cantarell,Fira Sans,Droid Sans,Helvetica Neue,sans-serif
  font-size 15px
  background-color #f2f3f5
  margin 0
  padding-top 55px
  overflow-y scroll

a, body
  color #34495e
  text-decoration none

ul
  list-style-type none
  padding 0
  margin 0

.view
  margin 0 auto
  padding-bottom 40px
  max-width 800px
  opacity 0
  position relative
  transition opacity .2s ease-in
  &.loaded
    opacity 1

.view-nav
  background white
  box-shadow 0 1px 2px rgba(0,0,0,.1)
  left 0
  padding 15px 30px
  position fixed
  right 0
  text-align center
  top 55px
  z-index 998
  a
    margin 0 1em
    &.disabled
      pointer-events none
      color #ccc

.page-not-found
  background white
  padding 40px
  text-align center

.error
  padding 40px
  text-align center
  color red

